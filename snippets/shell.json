{
  "create menu by shell script": {
    "prefix": "createmenu",
    "body": [
      "function show_command_menu() {",
      "	echo \"======================\"",
      "	echo \"0: 操作 1\"",
      "	echo \"1: 操作 2\"",
      "	echo \"2: 操作 3\"",
      "	echo \"q: 退出脚本\"",
      "	echo \"======================\"",
      "	echo \"请输入命令编号:\"",
      "}",
      "",
      "while true; do",
      "	show_command_menu",
      "	read -r command_id",
      "",
      "	case \\$command_id in",
      "	0)",
      "		echo \"000\"",
      "		;;",
      "	1)",
      "		echo \"111\"",
      "		;;",
      "	2)",
      "		echo \"222\"",
      "		;;",
      "	q)",
      "		echo \"退出脚本\"",
      "		break",
      "		;;",
      "	*)",
      "		echo \"无效的指令，请重新输入\"",
      "		;;",
      "	esac",
      "",
      "	echo \" \" # 添加空行分隔操作",
      "done",
      ""
    ],
    "description": "create menu by shell script"
  }
}
