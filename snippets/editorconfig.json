{
  "Generate editerconfig default config": {
    "prefix": "editorconfiggenerate",
    "body": [
      "# docs: http://editorconfig.org",
      "root = true",
      "",
      "[*]",
      "indent_style = space",
      "end_of_line = lf",
      "charset = utf-8",
      "trim_trailing_whitespace = true",
      "insert_final_newline = true",
      "",
      "# Use 4 spaces for the Python files",
      "[*.py]",
      "max_line_length = 80",
      "",
      "# Use 2 spaces for json/yaml",
      "[{*.json,*.yml,*.yaml}]",
      "insert_final_newline = false",
      "",
      "# Minified JavaScript files shouldn't be changed",
      "[**.min.js]",
      "indent_style = ignore",
      "insert_final_newline = false",
      ""
    ],
    "description": "generate editerconfig default config"
  }
}
